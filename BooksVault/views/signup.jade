block head
   title=title
block content
  h1= title
  p Welcome to #{title}
  div.signupblock
    form(action="/signup" method="POST" width="100%" height="50px")
        input(type="text" value="" placeholder="username" name="username" width="50px" height="10px")
        input(type="password" value="" placeholder="password" name="password" width="50px" height="10px")
        input(type="password" value="" placeholder="confirm" name="confirm" width="50px" height="10px")
        input(type="text" value="" placeholder="E-mail" name="email" width="50px" height="10px")
        input(type="submit" value="sign up")

